%% 修士論文用スタイルファイル
%% jsarticle専用
%% 使い方はTemplate.texを見てくだされ

%% 行送り
\newcommand{\DefaultBaseLineSkip}{\setlength{\baselineskip}{14pt}}
%% 左マージン
\newcommand{\DefaultHOffset}{\setlength{\hoffset}{1cm}}
%% 一行あたりの文字数
\newcommand{\DefaultTextWidth}{\setlength{\textwidth}{33zw}}

%% \subsubsectionも目次に含める

\DefaultBaseLineSkip
\DefaultHOffset
\DefaultTextWidth

%% 学生番号
\newcommand{\StudentId}[1]{\global\def\@studentid{#1}}
%% 指導教員
\newcommand{\Adviser}[1]{\global\def\@adviser{#1}}
%% 専攻
\newcommand{\Major}[1]{\global\def\@major{#1}}

%% タイトル
\newcommand{\Title}[1]{%
  \title{
    千葉工業大学\\修士学位論文\\
    \vspace{8mm}
    \Huge\textbf{#1\\[8cm]}
  }%
}%

%% 著者
\newcommand{\Author}[1]{
  \author{%
    \begin{tabular}{l}
      所属専攻：\@major\\
      学生番号・氏名：{\@studentid}番　#1\\
      指導教員：{\@adviser}\\\\
    \end{tabular}
  }%
}%

%% 表紙，概要，目次のために，ページ番号をローマ数字にする
\newcommand{\Front}{\pagenumbering{roman}}
%% 本文のために，ページ番号をアラビア数字にする
\newcommand{\Main}{\pagenumbering{arabic}}

%% 表紙作成
\newcommand{\MakeTitlePage}{\maketitle\thispagestyle{empty}\newpage\DefaultBaseLineSkip}
%% 概要
\newenvironment{Abstract}{\setcounter{page}{1}\section*{概要}}{\newpage}
%% 目次
\newcommand{\TableOfContents}{\setcounter{tocdepth}{3}\tableofcontents\newpage}


%% セクションごとに改ページするようにする
\if@twocolumn
\else
\renewcommand{\section}{%
  \newpage
  \if@slide\clearpage\fi
  \@startsection{section}{1}{\z@}%
                {\Cvs \@plus.5\Cdp \@minus.2\Cdp}% 前アキ
                {.5\Cvs \@plus.3\Cdp}% 後アキ
                {\normalfont\Large\headfont\raggedright}}
\fi

%% paragraph の■を取る
\if@twocolumn
\else
  \renewcommand{\paragraph}{\@startsection{paragraph}{4}{\z@}%
    {0.5\Cvs \@plus.5\Cdp \@minus.2\Cdp}%
    {\z@}%
    {\normalfont\normalsize\headfont}}
\fi
